<%= form_for @photo do |f| %>
  <%= f.label :image %><br>
  <%= f.file_field :image %>

  <%= f.label :description %><br>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>

<% if @photo.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
